<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacobshack.kompotandroid" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".CardPictureActivity"
            android:label="@string/app_name"

            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QRScannerActivity"
            android:label="@string/title_activity_qrscanner" >
        </activity>
        <activity
            android:name=".PairStudent"
            android:label="@string/title_activity_pair_student" >
        </activity>
        <activity
            android:name=".ChooseExam"
            android:label="@string/title_activity_choose_exam" >
        </activity>
        <activity
            android:name=".ChooseAction"
            android:label="@string/title_activity_choose_action" >
        </activity>
    </application>

</manifest>
